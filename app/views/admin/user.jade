div(id="user-manifest-shell")
	h1 {{ first_name }} {{ last_name }}
		a(href="/admin/manifest", class="button") Back to Manifest
	h3 Tickets
	div(class="ticket-shell")
	h3 Attendee Account
	div(class="form-section")
		div(class="form-box")
			label Unique Link
			input(type="text", value="http://worlddominationsummit.com/{{ hash }}")
		div(class="form-box")
			label Profile
			input(type="text", value="http://worlddominationsummit.com/~{{ user_name }}")
	form(id="admin-user-update", method="post", action="#")
		input(type="hidden", name="user_id", value="{{ user_id }}")
		h3 Attendee Info
		div(class="form-section")
			div(class="form-box")
				label First Name
				input(name="first_name", type="text", value="{{ first_name }}")
			div(class="form-box")
				label Last Name
				input(name="last_name", type="text", value="{{ last_name }}")
			div(class="form-section")
				div(class="form-box")
					label E-Mail Address
					input(type="text", name="email", value="{{ email }} ")
			div(class="form-section")
				div(class="form-box")
					label Country
					input(type="hidden", name="country", id="country-select", value="{{ country }}")
			div(class="form-section")
				div(class="form-box")
					label Address
					input(type="text", name="address", value="{{ address }}")
				div(class="form-box")
					label Address 2
					input(type="text", name="address2", value="{{ address2 }}")
			div(class="form-section")
				div(class="form-box")
					label City
					input(type="text", name="city", value="{{ city }}")
				div(class="form-box")
					dive(id="region-shell", data-value="{{ region }}")
			div(class="form-section")
				div(class="form-box")
					label Zip
					input(type="text", name="zip", value="{{ zip }}")
			div(class="form-section")
				div(class="form-box")
					label Type
					select(name="type", class="select2", style="width: 300px")
						option(value="attendee") Attendee
						option(value="ambassador") Ambassador
						option(value="potential-ambassador") Potential Ambassador
						option(value="staff") Staff
						option(value="speaker") Speaker
				div(class="form-box")
					label SuperPowers
					select(name="capabilities", class="select2", multiple="true", style="width: 300px")
						option(value="test1") Test 1
						option(value="test2") Test 2
						option(value="test3") Test 3
						option(value="test4") Test 4
						option(value="test5") Test 5
						option(value="test6") Test 6
						option(value="test7") Test 7
						option(value="test8") Test 8
						option(value="test9") Test 9
						option(value="test10") Test 10
						option(value="test11") Test 11
						option(value="test12") Test 12
			div(class="clear")
			div(class="form-section")
				input(type="submit", value="Save Attendee Info", class="button")
