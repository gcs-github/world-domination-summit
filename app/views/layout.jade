doctype html
html(lang='en', class="#{hide_counter}")
	head
		title= title
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		//- meta(name='apple-mobile-web-app-capable', content='yes')
		meta(charset="UTF-8")
		script.
			var ap = {};
			ap.me = !{me};
			ap.templates = !{tpls};
			ap.interests = !{interests};
			ap.year = !{year};
			ap.speakers = !{speakers};
			ap.provinces = !{provinces};
			ap.countries = !{countries};
			ap.env = !{env};
		link(rel='stylesheet', href='/images/apple-icon.png')
		link(rel='stylesheet', type="text/css", href='/app/assets/css/styles.css')
		link(rel='stylesheet', type="text/css", href='/app/assets/css/fonts.css')
		//- link(rel='stylesheet', type="text/css", href='/assets/css/tablet.css', media='screen and (max-width:1024px) and (min-width:628px)')
		!= js('main')
		script(type="text/javascript",src="https://maps.googleapis.com/maps/api/js?sensor=false&ver=3.7.1")
	body(class='ui-body-a')
		div(class="preload")
			img(src="/images/button-sprites_nav-hover.png")
			img(src="/images/separators/zig-zags_blue.png")
			img(src="/images/icon-sprites_corner.png")
			img(src="/images/icon-sprites_sidebar.png")
			img(src="/images/story/circle-1.jpg")
		div(id="loading")
			div(id="the-loading-icon")
		nav(id="top-nav")
			div(class="contentainer")
				div(id="nav-links")
					a(id="nav-story", href="/story") Story
					a(id="nav-schedule", href="/schedule") Schedule
					a(id="nav-hq", href="/headquarters") Headquarters
					a(id="nav-register", href="/register") Register
					a(id="nav-foundation", href="/foundation") Foundation
					a(id="nav-academies", href="/academies") Academies
		div(id="notifications")
		header(id="main-header")
			span(id="long-squiggly")
			div(class="contentainer")
				a(href="/", id="logo")
				div(id="logo-waves")
				div(id="counter-shell")
					h6 The Revolution Returns In:
					div(class="clear")
					div(id="counter-plane")
					div(id="counter-days", class="counter-section")
						span Days
						div 
					div(id="counter-hours", class="counter-section")
						span Hours
						div 
					div(id="counter-mins", class="counter-section")
						span Mins
						div 
					div(class="clear")
					div(class="logged-out")
						a(id="counter-register", class="counter-button" href="/register") Register
						a(id="counter-login", class="counter-button", href="/login") Login
					div(class="logged-in")
						a(id="counter-ops", class="counter-button", href="/hub") Hub
						a(id="counter-account", class="counter-button", href="/settings") Account
				div(id="sidebar-shell")

		main(class="contentainer")
			!= body

		footer
			div(id="footer-links")
				a(href="/faqs") FAQ
				a(href="/contact-us") Contact Us
				a(href="/transfer", class="logged-in") Transfer Ticket
			div(id="footer-credits")
				| Â© Chris Guillebeau 2011-2014 &nbsp; | &nbsp; Design by 
				a(href="http://jolbyandfriends.com") Jolby & Friends
				| &nbsp;&nbsp; | &nbsp; Programming by 
				a(href="http://nickyhajal.com") Nicky Hajal
